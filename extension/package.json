{
  "name": "x-article-exporter",
  "displayName": "X Article Exporter",
  "version": "0.0.1",
  "description": "Export X (Twitter) Articles to professionally formatted PDFs with one click. Features rich text support, clickable TOC, and dark mode.",
  "author": "korecodes",
  "scripts": {
    "dev": "plasmo dev",
    "build": "plasmo build",
    "package": "plasmo package",
    "deploy-web": "plasmo package && cp build/chrome-mv3-prod.zip ../web/public/x-article-exporter.zip"
  },
  "dependencies": {
    "dompurify": "^3.3.1",
    "jspdf": "^4.0.0",
    "jspdf-autotable": "^5.0.7",
    "plasmo": "0.90.5",
    "react": "18.2.0",
    "react-dom": "18.2.0"
  },
  "devDependencies": {
    "@ianvs/prettier-plugin-sort-imports": "4.1.1",
    "@types/chrome": "0.0.258",
    "@types/dompurify": "^3.2.0",
    "@types/node": "20.11.5",
    "@types/react": "18.2.48",
    "@types/react-dom": "18.2.18",
    "prettier": "3.2.4",
    "typescript": "5.3.3"
  },
  "manifest": {
    "permissions": [
      "activeTab",
      "storage"
    ],
    "host_permissions": [
      "https://x.com/*",
      "https://twitter.com/*",
      "https://pbs.twimg.com/*"
    ]
  }
}
